                                                            <option value="5" <?php echo $editar_favorito['descuento_aplicado'] == 5 ? 'selected' : ''; ?>>5% de descuento</option>
                                                            <option value="10" <?php echo $editar_favorito['descuento_aplicado'] == 10 ? 'selected' : ''; ?>>10% de descuento</option>
